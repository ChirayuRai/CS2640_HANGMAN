# counts the length of a hard-coded string

.data
	string: .asciiz "Hello"
	msg1: .asciiz "The length of the string: "

.text
main:

	
	la $a0, string             		# load address of string
	jal find_length              		# call find_length procedure
        jal print				# call print procedure
	find_length:
		li $t0, 0	 		# count = 0
		loop:
			lb $t1, 0($a0) 		# load char into $t1 
			beqz $t1, exit_l 	# check for the null character
			addi $a0, $a0, 1 	# increment the string pointer
			addi $t0, $t0, 1 	# increment count by 1
			j loop 			# return to loop
		exit_l:
			jr $ra			# go to next line in code
	print:
		li $v0, 4
  		la $a0, msg1
  		syscall

  		li $v0, 1
  		move $a0, $t0
  		syscall
        
exit:
	li $v0, 10				# syscall to exit
        syscall
